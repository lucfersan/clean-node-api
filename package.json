{
  "name": "clean-node-api",
  "version": "1.8.0",
  "main": "index.js",
  "author": "Lucas Fernandes <fernandes.lucas11@outlook.com>",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "tsc -w",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "up": "yarn build && docker-compose up -d",
    "down": "docker-compose down",
    "clear:jest": "jest --clearCache",
    "test:verbose": "jest --passWithNoTests --runInBand --no-cache",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand --no-cache",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "test:coveralls": "yarn test:ci && yarn coveralls < coverage/lcov.info",
    "prettier": "prettier --write .",
    "lint": "eslint src --ext ts --fix"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongodb": "^3.6.9",
    "nodemon": "^2.0.12",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@shelf/jest-mongodb": "^1.2.5",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/module-alias": "^2.0.1",
    "@types/mongodb": "^3.6.19",
    "@types/node": "^15.14.0",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.6.2",
    "@typescript-eslint/eslint-plugin": "4",
    "@typescript-eslint/parser": "^4.28.2",
    "coveralls": "^3.1.1",
    "eslint": "7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "2",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-node": "11",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "4",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "mockdate": "^3.0.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
